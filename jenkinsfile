pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
        CLIENT_IMAGE_NAME = "himagirinandan/my-frontend"
        SERVER_IMAGE_NAME = "himagirinandan/my-backend"
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Client') {
            steps {
                dir('client') {
                    bat 'npm install'
                    bat 'npm run build'
                }
            }
        }

        stage('Build Server') {
            steps {
                dir('server') {
                    bat 'npm install'
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                bat "docker build -t %CLIENT_IMAGE_NAME%:%IMAGE_TAG% ./client"
                bat "docker build -t %SERVER_IMAGE_NAME%:%IMAGE_TAG% ./server"
                bat "docker tag %CLIENT_IMAGE_NAME%:%IMAGE_TAG% %CLIENT_IMAGE_NAME%:latest"
                bat "docker tag %SERVER_IMAGE_NAME%:%IMAGE_TAG% %SERVER_IMAGE_NAME%:latest"
            }
        }

        stage('Login to Docker Hub') {
            steps {
                bat '''
                echo|set /p=%DOCKERHUB_CREDENTIALS_PSW%|docker login -u %DOCKERHUB_CREDENTIALS_USR% --password-stdin
                '''
            }
        }

        stage('Push to Docker Hub') {
            steps {
                bat "docker push %CLIENT_IMAGE_NAME%:%IMAGE_TAG%"
                bat "docker push %SERVER_IMAGE_NAME%:%IMAGE_TAG%"
                bat "docker push %CLIENT_IMAGE_NAME%:latest"
                bat "docker push %SERVER_IMAGE_NAME%:latest"
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment step placeholder - customize based on your target platform'
            }
        }
    }

    post {
        always {
            bat 'docker logout'
            bat "docker rmi %CLIENT_IMAGE_NAME%:%IMAGE_TAG% || exit 0"
            bat "docker rmi %SERVER_IMAGE_NAME%:%IMAGE_TAG% || exit 0"
        }
    }
}
